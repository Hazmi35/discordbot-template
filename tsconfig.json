{
    "compilerOptions": {
        "target": "ES2019",
        "module": "commonjs",
        "strict": true,
        "baseUrl": ".",
        "outDir": "dist",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "node_modules/@types",
            "src/typings"
        ]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules/**"]
}