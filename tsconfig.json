{
	"compilerOptions": {
		"target": "ES2019",
		"module": "commonjs",
		"strict": true,
		"baseUrl": ".",
		"outDir": "dist",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"noEmitHelpers": true,
		"importHelpers": true,
		"incremental": true,
		"resolveJsonModule": true,
		"typeRoots": [
			"node_modules/@types",
			"src/typings"
		]
	},
	"exclude": [
		"node_modules/**"
	],
	"include": [
		"src/**/*"
	]
}